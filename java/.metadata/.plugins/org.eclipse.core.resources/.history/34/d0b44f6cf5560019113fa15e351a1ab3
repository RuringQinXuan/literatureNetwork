package com.cytoscape.CytoscapeLiteratureNetwork.internal.ui;

import java.awt.BorderLayout;

import javax.swing.BorderFactory;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JSlider;
import javax.swing.JTextField;

public class DefineEntityNumberPanel extends JPanel {
	
	public DefineEntityNumberPanel(){
	
	JLabel jl_protein_number = new JLabel("Maxinum number of proteins:  ");
	
	final JSlider sliderEntityNumber = new JSlider(0, 10000, 100);		
	sliderEntityNumber.setMinorTickSpacing(1);		
	sliderEntityNumber.setMajorTickSpacing(500);
	sliderEntityNumber.setPaintTicks(true);
	
	JTextField jtf_entity_number = new JTextField(2);
	jtf_entity_number.setText("100");
	
	this.setLayout(new BorderLayout(5,5));
	this.setBorder(BorderFactory.createEtchedBorder());  
	this.add(jl_protein_number,BorderLayout.WEST);
	this.add(sliderEntityNumber,BorderLayout.CENTER);
	this.add(jtf_entity_number,BorderLayout.EAST);
	}
}
