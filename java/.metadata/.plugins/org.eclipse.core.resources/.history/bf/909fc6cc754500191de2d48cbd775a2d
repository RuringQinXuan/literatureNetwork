package com.cytoscape.client.internal;

import java.util.Properties;

import org.cytoscape.service.util.AbstractCyActivator;
import org.cytoscape.work.ServiceProperties;
import org.cytoscape.work.TaskFactory;
import org.osgi.framework.BundleContext;

import com.cytoscape.client.internal.task.ShowPanelTaskFactory;

public class CyActivator extends AbstractCyActivator {

	@Override
	public void start(BundleContext context) throws Exception {
		// TODO Auto-generated method stub
		ShowPanelTaskFactory spt=new ShowPanelTaskFactory();
		Properties p =new Properties();
		p.setProperty(ServiceProperties.PREFERRED_MENU, "Apps");
		p.setProperty(ServiceProperties.TITLE, "Literature Network");
		registerService(context,spt,TaskFactory.class,p);
	}

}
